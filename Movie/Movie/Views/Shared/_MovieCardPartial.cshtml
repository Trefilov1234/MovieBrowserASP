@model Cinema
<div class="card">
    @* <img src="@(Model.Poster=="N/A" ? "/images/placeholder.png":Model.Poster)" class="card-img-top" alt="..."> *@
    @* <img src="@Model.Poster" class="card-img-top" alt="..."> *@
    @* <img src="@Model.Poster" onerror="event.target.src='/images/placeholder.png'" class="card-img-top" alt="..."> *@
    @* <picture cinema="@Model" onerror="event.target.src='/images/placeholder.png'"></picture> *@
    <div class="img-container">
        <div class="img-blur" style="background-image:url(@Model.Poster)"></div>
        <img src="@Model.Poster" onerror="event.target.src='/images/placeholder.png'" class="card-img-top" alt="...">
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Title (@Model.Year)</h5>
        <p class="card-text">Janre : @Model.Type</p>
        

        @if (Model.Plot==null)
        {
            //<a asp-controller="Home" asp-action="Movie" asp-route-id="@Model.imdbID" class="btn btn-primary">Detail</a>
            <a my-type="Full" movie="@Model"></a>
            <a my-type="Modal" movie="@Model" data-open-modal></a>
        }
    </div>
</div>
